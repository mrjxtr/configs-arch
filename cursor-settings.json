    // Window Settings
    "search.quickOpen.includeHistory": false,
    "breadcrumbs.enabled": true,
    "window.newWindowProfile": "Default",
    "window.zoomLevel": 0.2,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "auto",
    "window.menuBarVisibility": "compact",
    "window.newWindowDimensions": "inherit",
    "window.titleBarStyle": "custom",
    "window.titleSeparator": " | ",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}${appName}",

    // Explorer Settings
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Terminal Settings
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "pwsh",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.letterSpacing": 1.2,
    "terminal.integrated.inheritEnv": false,

    // Git Settings
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.openRepositoryInParentFolders": "never",
    "git.autorefresh": true,
    "git.autofetch": false,
    "gitlens.codeLens.enabled": false,
    "githubPullRequests.allowFetch": false,
    "githubPullRequests.pullBranch": "never",
    "diffEditor.ignoreTrimWhitespace": false,

    // SCM Settings
    "scm.diffDecorations": "gutter",
    "scm.diffDecorationsGutterVisibility": "hover",
    "scm.diffDecorationsGutterWidth": 2,

    // Python Settings
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "off", // ! use basic or standard for fast development project
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.defaultInterpreterPath": "/home/mrjxtr/miniconda3/bin/python",
    "python.condaPath": "/home/mrjxtr/miniconda3/condabin/conda",

    // Jupyter Settings
    "jupyter.askForKernelRestart": false,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,

    // Notebook Settings
    "notebook.defaultFormatter": "charliermarsh.ruff",
    "notebook.formatOnCellExecution": true,
    "notebook.formatOnSave.enabled": true,
    "notebook.output.scrolling": true,
    "notebook.output.textLineLimit": 30,

    // Interactive Window Settings
    "interactiveWindow.collapseCellInputCode": "never",

