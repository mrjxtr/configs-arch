    "material-icon-theme.folders.color": "#90a4ae",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.saturation": 1,
    "material-icon-theme.folders.customClones": [
        {
            "name": "ds-data",
            "base": "database",
            "color": "yellow-800",
            "folderNames": ["data"]
        },
        {
            "name": "ds-data-raw",
            "base": "database",
            "color": "yellow-700",
            "folderNames": ["raw"]
        },
        {
            "name": "ds-data-external",
            "base": "database",
            "color": "yellow-700",
            "folderNames": ["external"]
        },
        {
            "name": "ds-data-interim",
            "base": "database",
            "color": "yellow-700",
            "folderNames": ["interim"]
        },
        {
            "name": "ds-data-processed",
            "base": "database",
            "color": "yellow-700",
            "folderNames": ["processed"]
        },
        {
            "name": "dashboards",
            "base": "review",
            "color": "teal-400",
            "folderNames": ["dashboards"]
        },
        {
            "name": "modeling",
            "base": "enum",
            "color": "red-400",
            "folderNames": ["modeling"]
